<p id="notice"><%= notice %></p>

<h1>Список вагонов</h1>

<table>
  <thead>
  <tr>
    <th>Вагоны</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @vagons.each do |vagon| %>
      <tr>

        <td>
          <%= vagon.number %>
          <%= vagon.type_name %>

        </td>
        <td><%= link_to 'Показать', vagon_path(vagon) %></td>
        <td><%= link_to 'Редактировать', edit_vagon_path(vagon) %></td>
        <td><%= link_to 'Удалить', vagon_path(vagon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>

  </tbody>
</table>

<br>

<%= link_to 'Новый вагон', new_vagon_path %>
